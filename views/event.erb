<!DOCTYPE html>
<html>
  <head>
    <title>Event</title>
    <link rel="stylesheet" type="text/css" href="/css/events.css"  />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  </head>
  <body>
    <form method="post" action="/<%= @action %>">
      <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= @event.title %>" />
      </p>
      <p>
        <label for="content">Description</label>
        <input type="text" id="content" name="content" value="<%= @event.content %>" />
      </p>
      <p>
        <label for="start_time">Start</label>
        <input type="text" id="start_time" name="start_time" value="<%= @event.start_time %>" />
      </p>
      <p>
        <label for="end_time">End</label>
        <input type="text" id="end_time" name="end_time" value="<%= @event.end_time %>" />
      </p>
      <p>
        <label for="where">Location</label>
        <input type="text" id="where" name="where" value="<%= @event.where %>" />
      </p>
      <input type="hidden" name="id" value="<%= @event.calendar_event_id %>">
      <input type="submit" value="Submit" />
    </form>
    
<% if @events && !@events.empty? %>
<%  for event in @events %>
    <div class="events">
      <a href="/event?id=<%= event.id.strip %>">
        <%= event.title %> 
      </a>
      <form method="post" action="/event/delete">
        <input type="hidden" name="id" value="<%= event.id.strip %>">
        <input type="submit" value="Delete" />
      </form>
    </div>  
<%  end %>
<% end %>
  </body>
</html>    
